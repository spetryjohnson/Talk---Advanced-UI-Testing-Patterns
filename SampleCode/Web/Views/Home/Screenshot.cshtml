    @if (Model.Foo && Model.Bar && Model.Bat) {
		<b>FOO and BAR and BAT!</b>
	}
	else if (Model.Foo && Model.Bar && !Model.Bat) {
		<b>FOO and BAR, but NOT BAT!</b>
	}
	else if (Model.Foo && !Model.Bar && Model.Bat) {
		<b>FOO and BAT, but NOT BAR!</b>
	}
	else if (!Model.Foo && Model.Bar && Model.Bat) {
		<b>BAR and BAT, but NOT FOO!</b>
	}
</div>

